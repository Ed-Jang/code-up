#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <math.h>

int main(void) {
	int num = 1;
	while (num != 0) {
		printf("\nnum=?");
		scanf("%d", &num);
		if (num < 0) {
			printf("0 : Negative Number ! \n");
			continue;
		}
		printf("Square root of %d = %f\n", num, sqrt(num));
	}
	printf("\n\n The end");
}
